<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <net.codepig.customviewdemo.view.AutoScaleTextView
                android:text="flippedButton"
                android:id="@+id/flipBtn"
                android:textColor="@color/colorPrimary"
                app:textSizePx="32"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.codepig.customviewdemo.view.AutoScaleTextView
                android:id="@+id/maskBtn"
                android:text="MaskImage"
                android:textColor="@color/colorPrimary"
                app:textSizePx="32"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.codepig.customviewdemo.view.AutoScaleTextView
                android:id="@+id/DepthBtn"
                android:text="SensorDepth3D"
                android:textColor="@color/colorPrimary"
                app:textSizePx="32"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.codepig.customviewdemo.view.AutoScaleTextView
                android:text="flyHeartButton"
                android:id="@+id/flyHeartBtn"
                android:textColor="@color/colorPrimary"
                app:textSizePx="32"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.codepig.customviewdemo.view.AutoScaleTextView
                android:text="seekBarButton"
                android:id="@+id/seekBarBtn"
                android:textColor="@color/colorPrimary"
                app:textSizePx="32"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <net.codepig.customviewdemo.view.AutoScaleTextView
                android:text="inputEdit"
                android:id="@+id/inputBtn"
                android:textColor="@color/colorPrimary"
                app:textSizePx="32"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>